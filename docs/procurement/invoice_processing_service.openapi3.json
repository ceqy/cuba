        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/invoiceReverseInvoiceRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "InvoiceProcessingService"
        ]
      }
    },
    "/api/v1/procurement/match-invoice": {
      "post": {
        "summary": "对暂存的发票执行三单匹配 (PO-GR-IV)",
