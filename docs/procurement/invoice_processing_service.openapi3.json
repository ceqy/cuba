        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/invoiceParkInvoiceRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "InvoiceProcessingService"
        ]
      }
    },
    "/api/v1/procurement/invoice/post": {
      "post": {
        "summary": "过账已匹配或无差异的发票",
