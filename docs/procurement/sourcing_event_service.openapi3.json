        "type": "string",
        "enum": [
          "RELEASE_STATUS_UNSPECIFIED",
          "RELEASE_STATUS_NOT_RELEASED",
          "RELEASE_STATUS_PARTIALLY_RELEASED",
          "RELEASE_STATUS_RELEASED",
          "RELEASE_STATUS_BLOCKED",
          "RELEASE_STATUS_REJECTED"
        ],
        "default": "RELEASE_STATUS_UNSPECIFIED",
        "title": "审批状态 (Procurement)"
