{
    "info": {
        "name": "Cuba ERP - IAM Services (REST)",
        "description": "Postman collection for testing IAM microservices via Envoy REST Gateway",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8080"
        },
        {
            "key": "token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth Service",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "  var json = pm.response.json();",
                                    "  pm.collectionVariables.set('token', json.access_token);",
                                    "  console.log('Token saved!');",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\",\n  \"tenant_id\": \"default\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/auth/login",
                        "description": "用户登录，返回 JWT Token"
                    }
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test123!\",\n  \"tenant_id\": \"default\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/auth/register",
                        "description": "用户注册"
                    }
                },
                {
                    "name": "Get Current User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            },
                            {
                                "key": "x-user-id",
                                "value": "00000000-0000-0000-0000-000000000001"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": "{{base_url}}/api/v1/auth/current-user",
                        "description": "获取当前用户信息"
                    }
                },
                {
                    "name": "Get Permission Codes",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": "{{base_url}}/api/v1/auth/perm-codes",
                        "description": "获取当前用户权限码"
                    }
                }
            ]
        },
        {
            "name": "RBAC Service",
            "item": [
                {
                    "name": "List Roles",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/roles/list",
                        "description": "获取所有角色列表"
                    }
                },
                {
                    "name": "Create Role",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Editor\",\n  \"description\": \"内容编辑者\",\n  \"tenant_id\": \"default\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/roles",
                        "description": "创建新角色"
                    }
                },
                {
                    "name": "List Permissions",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/permissions",
                        "description": "获取所有权限列表"
                    }
                },
                {
                    "name": "Assign Role to User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"user_id\": \"00000000-0000-0000-0000-000000000001\",\n  \"role_id\": \"role_admin\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/users/assign-role",
                        "description": "分配角色给用户"
                    }
                },
                {
                    "name": "Check Permissions",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"user_id\": \"00000000-0000-0000-0000-000000000001\",\n  \"permissions\": [\"user:read\", \"role:write\", \"system:admin\"]\n}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/check-permissions",
                        "description": "检查用户是否拥有指定权限"
                    }
                }
            ]
        },
        {
            "name": "OAuth Service (Stubs)",
            "item": [
                {
                    "name": "Authorize",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"client_id\": \"test-client\",\n  \"redirect_uri\": \"http://localhost:3000/callback\",\n  \"response_type\": \"code\",\n  \"scope\": \"openid profile\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/oauth2/authorize",
                        "description": "OAuth2 授权 (存根)"
                    }
                },
                {
                    "name": "Token",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"grant_type\": \"authorization_code\",\n  \"code\": \"auth-code-here\",\n  \"redirect_uri\": \"http://localhost:3000/callback\",\n  \"client_id\": \"test-client\",\n  \"client_secret\": \"secret\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/oauth2/token",
                        "description": "获取 OAuth2 Token (存根)"
                    }
                }
            ]
        }
    ]
}