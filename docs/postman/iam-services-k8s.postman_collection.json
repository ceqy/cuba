{
    "info": {
        "name": "Cuba ERP - IAM Services (Istio REST)",
        "description": "Postman collection for testing IAM microservices via Istio Ingress Gateway",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://192.168.139.2"
        },
        {
            "key": "token",
            "value": ""
        },
        {
            "key": "refresh_token",
            "value": ""
        }
    ],
    "item": [
        {
            "name": "Auth Service",
            "item": [
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "  var json = pm.response.json();",
                                    "  pm.collectionVariables.set('token', json.accessToken);",
                                    "  pm.collectionVariables.set('refresh_token', json.refreshToken);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\",\n  \"tenant_id\": \"default\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/auth/login"
                    }
                },
                {
                    "name": "Register",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"testuser_rest\",\n  \"email\": \"rest@example.com\",\n  \"password\": \"Password123!\",\n  \"tenant_id\": \"default\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/auth/register"
                    }
                },
                {
                    "name": "Refresh Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 200) {",
                                    "  var json = pm.response.json();",
                                    "  pm.collectionVariables.set('token', json.accessToken);",
                                    "  pm.collectionVariables.set('refresh_token', json.refreshToken);",
                                    "}"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"refresh_token\": \"{{refresh_token}}\"\n}"
                        },
                        "url": "{{base_url}}/api/v1/auth/refresh"
                    }
                }
            ]
        },
        {
            "name": "RBAC Service",
            "item": [
                {
                    "name": "List Roles",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/rbac/roles"
                    }
                },
                {
                    "name": "List Permissions",
                    "request": {
                        "method": "GET",
                        "url": "{{base_url}}/api/v1/rbac/permissions"
                    }
                },
                {
                    "name": "Check Permissions",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"user_id\": \"00000000-0000-0000-0000-000000000001\",\n  \"permissions\": [\"user:read\"]\n}"
                        },
                        "url": "{{base_url}}/api/v1/rbac/permissions/check"
                    }
                }
            ]
        }
    ]
}