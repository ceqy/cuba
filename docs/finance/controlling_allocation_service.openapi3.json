{
  "openapi": "3.1.0",
  "info": {
    "title": "Cost Allocation Service API",
    "version": "version not set",
    "description": "成本分配服务 - 成本中心分配、循环规则、分配执行",
    "contact": {
      "name": "Finance CO Team",
      "email": "finance-co@enterprise.com"
    }
  },
  "tags": [
    {
      "name": "ControllingAllocationService",
      "description": "ControllingAllocationService"
    }
  ],
  "paths": {
    "/api/v1/finance/activity-allocation/execute": {
      "post": {
        "summary": "执行活动分配",
        "operationId": "ControllingAllocationService_ExecuteActivityAllocation",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/controllingAllocationResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "$ref": "#/components/requestBodies/controllingExecuteAllocationRequest"
        },
        "tags": [
          "ControllingAllocationService"
        ]
      }
    },
    "/api/v1/finance/allocation-result": {
      "get": {
        "summary": "获取分配运行的结果",
        "operationId": "ControllingAllocationService_GetAllocationResult",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/controllingGetAllocationResultResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "run_id",
            "description": "分配运行的ID",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
          "ControllingAllocationService"
        ]
      }
    },
    "/api/v1/finance/cost-center-allocation/execute": {
      "post": {
        "summary": "执行成本中心分配",
        "operationId": "ControllingAllocationService_ExecuteCostCenterAllocation",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/controllingAllocationResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "$ref": "#/components/requestBodies/controllingExecuteAllocationRequest"
        },
        "tags": [
          "ControllingAllocationService"
        ]
      }
    }
  },
  "components": {
    "requestBodies": {
      "controllingExecuteAllocationRequest": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/controllingExecuteAllocationRequest"
            }
          }
        },
        "required": true
      }
    },
    "schemas": {
      "commonApiMessage": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      },
      "commonMonetaryValue": {
        "type": "object",
        "properties": {
          "currency_code": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "commonSystemDocumentReference": {
        "type": "object",
        "properties": {
          "document_number": {
            "type": "string"
          },
          "fiscal_year": {
            "type": "integer",
            "format": "int32"
          },
          "company_code": {
            "type": "string"
          },
          "document_type": {
            "type": "string"
          },
          "document_category": {
            "type": "string"
          }
        }
      },
      "controllingAllocationReceiver": {
        "type": "object",
        "properties": {
          "receiver_object": {
            "type": "string",
            "title": "接收方对象 (例如成本中心)"
          },
          "received_amount": {
            "$ref": "#/components/schemas/commonMonetaryValue"
          }
        },
        "title": "分配接收方信息"
      },
      "controllingAllocationResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "title": "操作是否成功"
          },
          "run_id": {
            "type": "string",
            "title": "分配运行的ID"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/commonApiMessage"
            },
            "title": "从核心ERP返回的消息列表"
          }
        },
        "title": "分配响应"
      },
      "controllingAllocationSender": {
        "type": "object",
        "properties": {
          "sender_object": {
            "type": "string",
            "title": "发送方对象 (例如成本中心)"
          },
          "sent_amount": {
            "$ref": "#/components/schemas/commonMonetaryValue"
          }
        },
        "title": "分配发送方信息"
      },
      "controllingExecuteAllocationRequest": {
        "type": "object",
        "properties": {
          "controlling_area": {
            "type": "string",
            "title": "控制范围 (原: KOKRS)"
          },
          "fiscal_year": {
            "type": "integer",
            "format": "int32",
            "title": "会计年度 (原: GJAHR)"
          },
          "fiscal_period": {
            "type": "integer",
            "format": "int32",
            "title": "会计期间 (原: MONAT)"
          },
          "allocation_cycle": {
            "type": "string",
            "title": "分配周期 (原: CYCLE)"
          },
          "test_run": {
            "type": "boolean",
            "title": "是否为测试运行"
          }
        },
        "title": "分配请求"
      },
      "controllingGetAllocationResultResponse": {
        "type": "object",
        "properties": {
          "run_id": {
            "type": "string",
            "title": "分配运行的ID"
          },
          "generated_documents": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/commonSystemDocumentReference"
            },
            "title": "生成的凭证列表"
          },
          "senders": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/controllingAllocationSender"
            },
            "title": "发送方列表"
          },
          "receivers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/controllingAllocationReceiver"
            },
            "title": "接收方列表"
          }
        },
        "title": "获取分配结果响应"
      },
      "protobufAny": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string"
          }
        },
        "additionalProperties": {}
      },
      "rpcStatus": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/protobufAny"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT token (e.g. from Login API)"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}