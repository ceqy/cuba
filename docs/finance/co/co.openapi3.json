            },
            "costcenterReverseResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "reversal_run_id": {
                        "type": "string"
                    },
                    "messages": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/commonApiMessage"
                        }
                    }
                }
            },
            "costcenterRunMode": {
                "type": "string",
                "enum": [
                    "RUN_MODE_UNSPECIFIED",
                    "REAL",
                    "SIMULATE"
                ],
                "default": "RUN_MODE_UNSPECIFIED"
            },
            "costcenterSegmentDefinition": {
                "type": "object",
                "properties": {
                    "segment_id": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "sender_cost_centers": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "receivers": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterReceiverRule"
                        }
                    },
                    "basis": {
                        "$ref": "#/components/schemas/costcenterTracingBasis"
                    }
                }
            },
            "costcenterTracingBasis": {
                "type": "string",
                "enum": [
                    "TRACING_BASIS_UNSPECIFIED",
                    "FIXED_PERCENT",
                    "FIXED_AMOUNT",
                    "STAT_KEY_FIGURE",
                    "ACTIVITY_QUANTITY",
                    "FORMULA"
                ],
                "default": "TRACING_BASIS_UNSPECIFIED"
