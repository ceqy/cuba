    "components": {
        "securitySchemes": {
            "bearer_auth": {
                "type": "apiKey",
                "description": "Bearer token for authentication",
                "name": "Authorization",
                "in": "header"
            }
        },
        "schemas": {
            "commonApiMessage": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "title": "消息类型 (E: Error, W: Warning, I: Info, S: Success)"
                    },
                    "code": {
                        "type": "string",
                        "title": "消息代码或编号"
                    },
                    "message": {
                        "type": "string",
                        "title": "消息文本"
                    },
                    "target": {
                        "type": "string",
                        "title": "消息指向的目标字段或参数"
                    }
                },
                "title": "API 调用消息\n用于包装从核心ERP系统API返回的消息。"
            },
            "commonMonetaryValue": {
                "type": "object",
                "properties": {
                    "currency_code": {
                        "type": "string",
                        "title": "货币代码 (ISO 4217), 例如 \"USD\", \"CNY\""
                    },
                    "value": {
                        "type": "string",
                        "title": "金额的字符串表示，例如 \"12345.67\""
                    }
                },
                "title": "金额值\n用于表示货币金额，将值定义为字符串以避免精度损失。"
            },
            "costcenterAllocationOverview": {
                "type": "object",
                "properties": {
                    "total_allocated": {
                        "$ref": "#/components/schemas/commonMonetaryValue"
                    },
                    "total_runs": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "success_runs": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "simulation_runs": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            },
            "costcenterAllocationResult": {
                "type": "object",
                "properties": {
                    "run_id": {
                        "type": "string"
                    },
                    "flows": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterCostCenterFlow"
                        }
                    },
                    "total_amount": {
                        "$ref": "#/components/schemas/commonMonetaryValue"
                    },
                    "nodes": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterVisualizationNode"
                        },
                        "title": "Metadata for simple visualization"
                    },
                    "edges": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterVisualizationEdge"
                        }
                    }
                }
            },
            "costcenterAllocationType": {
                "type": "string",
                "enum": [
                    "ALLOCATION_TYPE_UNSPECIFIED",
                    "DISTRIBUTION",
                    "ASSESSMENT",
                    "INDIRECT_ACTIVITY"
                ],
                "default": "ALLOCATION_TYPE_UNSPECIFIED"
            },
            "costcenterBatchExecuteRequest": {
                "type": "object",
                "properties": {
                    "items": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterExecuteRequest"
                        }
                    },
                    "stop_on_error": {
                        "type": "boolean"
                    }
                }
            },
            "costcenterBatchExecuteResponse": {
                "type": "object",
                "properties": {
                    "batch_id": {
                        "type": "string"
                    },
                    "total_items": {
                        "type": "integer",
                        "format": "int32"
                    }
                }
            },
            "costcenterCostCenterFlow": {
                "type": "object",
                "properties": {
                    "sender_cc": {
                        "type": "string"
                    },
                    "sender_ce": {
                        "type": "string"
                    },
                    "receiver_cc": {
                        "type": "string"
                    },
                    "receiver_ce": {
                        "type": "string"
                    },
                    "amount": {
                        "$ref": "#/components/schemas/commonMonetaryValue"
                    },
                    "segment_id": {
                        "type": "string"
                    }
                }
            },
            "costcenterCycleDefinition": {
                "type": "object",
                "properties": {
                    "cycle_id": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "segments": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/costcenterSegmentDefinition"
                        }
                    },
                    "valid_from": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "valid_to": {
                        "type": "string",
                        "format": "date-time"
                    }
                }
            },
            "costcenterExecuteRequest": {
                "type": "object",
                "properties": {
                    "controlling_area": {
                        "type": "string"
                    },
                    "fiscal_year": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "fiscal_period": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "cycle_id": {
                        "type": "string"
                    },
                    "ledger": {
                        "type": "string"
                    },
                    "type": {
                        "$ref": "#/components/schemas/costcenterAllocationType"
                    },
                    "mode": {
                        "$ref": "#/components/schemas/costcenterRunMode"
                    },
                    "overwrite_existing": {
                        "type": "boolean"
                    },
                    "segment_id": {
                        "type": "string"
                    }
                }
            },
            "costcenterExecuteResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "run_id": {
                        "type": "string"
                    },
                    "execution_time": {
                        "type": "string"
                    },
                    "messages": {
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/commonApiMessage"
                        }
                    },
                    "total_allocated": {
                        "$ref": "#/components/schemas/commonMonetaryValue"
                    }
                }
            },
            "costcenterExportResponse": {
                "type": "object",
                "properties": {
                    "content": {
                        "type": "string",
                        "format": "byte"
                    },
                    "mime_type": {
                        "type": "string"
                    },
                    "filename": {
                        "type": "string"
                    }
                }
            },
            "costcenterImportRequest": {
                "type": "object",
                "properties": {
                    "controlling_area": {
                        "type": "string"
                    },
                    "content": {
                        "type": "string",
                        "format": "byte"
                    },
                    "format": {
                        "type": "string"
                    }
                }
            },
            "costcenterImportResponse": {
                "type": "object",
                "properties": {
                    "success": {
                        "type": "boolean"
                    },
                    "rows_processed": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "errors": {
                        "type": "array",
