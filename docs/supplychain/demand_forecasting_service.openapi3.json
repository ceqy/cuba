{
  "openapi": "3.1.0",
  "info": {
    "title": "Demand Forecasting Service API",
    "version": "version not set",
    "description": "需求预测服务 - 统计预测、机器学习、需求计划",
    "contact": {
      "name": "Planning Team",
      "email": "planning@enterprise.com"
    }
  },
  "tags": [
    {
      "name": "DemandForecastingService",
      "description": "DemandForecastingService"
    }
  ],
  "paths": {
    "/api/v1/supplychain/compare-forecast-versions": {
      "post": {
        "summary": "比较预测版本 (New)",
        "operationId": "DemandForecastingService_CompareForecastVersions",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/forecastingForecastComparisonResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/forecastingCompareForecastVersionsRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "DemandForecastingService"
        ]
      }
    },
    "/api/v1/supplychain/forecast": {
      "get": {
        "summary": "获取已生成的预测计划",
        "operationId": "DemandForecastingService_GetForecast",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/forecastingForecastPlan"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "plan_id",
            "description": "计划ID",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.request_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.tenant_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.user_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.roles",
            "in": "query",
            "required": false,
            "explode": true,
            "schema": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          {
            "name": "context.idempotency_key",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.locale",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.timestamp",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "context.source_system",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "context.correlation_id",
            "in": "query",
            "required": false,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
          "DemandForecastingService"
        ]
      }
    },
    "/api/v1/supplychain/forecast-plan": {
      "put": {
        "summary": "更新预测计划 (New)",
        "operationId": "DemandForecastingService_UpdateForecastPlan",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/forecastingForecastPlanResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/forecastingUpdateForecastPlanRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "DemandForecastingService"
        ]
      }
    },
    "/api/v1/supplychain/forecast/generate": {
      "post": {
        "summary": "生成需求预测 - 异步",
        "operationId": "DemandForecastingService_GenerateForecast",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/commonJobInfo"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/forecastingGenerateForecastRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "DemandForecastingService"
        ]
      }
    },
    "/api/v1/supplychain/transfer-forecast-to-erp": {
      "post": {
        "summary": "将预测计划传输到核心ERP作为计划独立需求",
        "operationId": "DemandForecastingService_TransferForecastToERP",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/forecastingTransferForecastResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/forecastingTransferForecastRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "DemandForecastingService"
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "commonApiMessage": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "target": {
            "type": "string"
          }
        }
      },
      "commonDateRange": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date-time"
          },
          "end_date": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "commonForecastModel": {
        "type": "string",
        "enum": [
          "FORECAST_MODEL_UNSPECIFIED",
          "FORECAST_MODEL_MOVING_AVERAGE",
          "FORECAST_MODEL_EXPONENTIAL_SMOOTHING",
          "FORECAST_MODEL_ARIMA",
          "FORECAST_MODEL_LINEAR_REGRESSION",
          "FORECAST_MODEL_HOLT_WINTERS",
          "FORECAST_MODEL_CROSTON",
          "FORECAST_MODEL_MACHINE_LEARNING_ENSEMBLE"
        ],
        "default": "FORECAST_MODEL_UNSPECIFIED",
        "description": "- FORECAST_MODEL_CROSTON: For intermittent demand",
        "title": "预测模型 (Forecasting)"
      },
      "commonJobInfo": {
        "type": "object",
        "properties": {
          "job_id": {
            "type": "string"
          },
          "job_type": {
            "type": "string"
          },
          "status": {
            "$ref": "#/components/schemas/commonJobStatus"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "started_at": {
            "type": "string",
            "format": "date-time"
          },
          "completed_at": {
            "type": "string",
            "format": "date-time"
          },
          "progress_percentage": {
            "type": "integer",
            "format": "int32"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/commonApiMessage"
            }
          },
          "error_detail": {
            "type": "string"
          }
        }
      },
      "commonJobStatus": {
        "type": "string",
        "enum": [
          "JOB_STATUS_UNSPECIFIED",
          "JOB_STATUS_PENDING",
          "JOB_STATUS_RUNNING",
          "JOB_STATUS_COMPLETED",
          "JOB_STATUS_FAILED",
          "JOB_STATUS_CANCELLED",
          "JOB_STATUS_PARTIALLY_COMPLETED"
        ],
        "default": "JOB_STATUS_UNSPECIFIED",
        "title": "异步作业状态"
      },
      "commonQuantityValue": {
        "type": "object",
        "properties": {
          "unit_code": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      },
      "commonRequestContext": {
        "type": "object",
        "properties": {
          "request_id": {
            "type": "string"
          },
          "tenant_id": {
            "type": "string"
          },
          "user_id": {
            "type": "string"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "idempotency_key": {
            "type": "string"
          },
          "locale": {
            "type": "string"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "source_system": {
            "type": "string"
          },
          "correlation_id": {
            "type": "string"
          }
        }
      },
      "forecastingCompareForecastVersionsRequest": {
        "type": "object",
        "properties": {
          "plan_id_base": {
            "type": "string"
          },
          "plan_id_compare": {
            "type": "string"
          },
          "context": {
            "$ref": "#/components/schemas/commonRequestContext"
          }
        }
      },
      "forecastingForecastComparisonResponse": {
        "type": "object",
        "properties": {
          "material": {
            "type": "string"
          },
          "plant": {
            "type": "string"
          },
          "differences": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/forecastingPeriodDifference"
            }
          }
        }
      },
      "forecastingForecastPeriod": {
        "type": "object",
        "properties": {
          "start_date": {
            "type": "string",
            "format": "date-time",
            "title": "周期开始日期"
          },
          "end_date": {
            "type": "string",
            "format": "date-time",
            "title": "周期结束日期"
          },
          "forecasted_quantity": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "confidence_lower_bound": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "confidence_upper_bound": {
            "$ref": "#/components/schemas/commonQuantityValue"
          }
        },
        "title": "预测周期"
      },
      "forecastingForecastPlan": {
        "type": "object",
        "properties": {
          "plan_id": {
            "type": "string",
            "title": "计划ID"
          },
          "material": {
            "type": "string",
            "title": "物料编号"
          },
          "plant": {
            "type": "string",
            "title": "工厂"
          },
          "forecast_version": {
            "type": "string",
            "title": "预测版本"
          },
          "periods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/forecastingForecastPeriod"
            },
            "title": "预测周期"
          },
          "model_used": {
            "$ref": "#/components/schemas/commonForecastModel"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "title": "创建时间"
          }
        },
        "title": "预测计划"
      },
      "forecastingForecastPlanResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "plan_id": {
            "type": "string"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/commonApiMessage"
            }
          }
        }
      },
      "forecastingGenerateForecastRequest": {
        "type": "object",
        "properties": {
          "material": {
            "type": "string",
            "title": "物料编号"
          },
          "plant": {
            "type": "string",
            "title": "工厂"
          },
          "historical_period": {
            "$ref": "#/components/schemas/commonDateRange"
          },
          "forecast_period": {
            "$ref": "#/components/schemas/commonDateRange"
          },
          "forecast_model": {
            "$ref": "#/components/schemas/commonForecastModel"
          },
          "context": {
            "$ref": "#/components/schemas/commonRequestContext"
          }
        },
        "title": "生成预测请求"
      },
      "forecastingPeriodDifference": {
        "type": "object",
        "properties": {
          "period": {
            "$ref": "#/components/schemas/commonDateRange"
          },
          "quantity_base": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "quantity_compare": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "variance": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "variance_percentage": {
            "type": "number",
            "format": "double"
          }
        }
      },
      "forecastingTransferForecastRequest": {
        "type": "object",
        "properties": {
          "plan_id": {
            "type": "string",
            "title": "计划ID"
          },
          "requirement_plan_version": {
            "type": "string",
            "title": "独立需求计划版本"
          },
          "activate_requirements": {
            "type": "boolean",
            "title": "是否激活需求"
          },
          "context": {
            "$ref": "#/components/schemas/commonRequestContext"
          }
        },
        "title": "传输预测请求"
      },
      "forecastingTransferForecastResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "title": "操作是否成功"
          },
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/commonApiMessage"
            },
            "title": "从核心ERP返回的消息列表"
          }
        },
        "title": "传输预测响应"
      },
      "forecastingUpdateForecastPlanRequest": {
        "type": "object",
        "properties": {
          "plan_id": {
            "type": "string"
          },
          "modified_periods": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/forecastingForecastPeriod"
            }
          },
          "reason_code": {
            "type": "string"
          },
          "context": {
            "$ref": "#/components/schemas/commonRequestContext"
          }
        }
      },
      "protobufAny": {
        "type": "object",
        "properties": {
          "@type": {
            "type": "string"
          }
        },
        "additionalProperties": {}
      },
      "rpcStatus": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "message": {
            "type": "string"
          },
          "details": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/protobufAny"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT token (e.g. from Login API)"
      }
    }
  },
  "security": [
    {
      "BearerAuth": []
    }
  ]
}