          },
          "batch": {
            "type": "string",
            "title": "批次号"
          },
          "plant": {
            "type": "string",
            "title": "工厂"
          },
          "node_type": {
            "$ref": "#/components/schemas/commonNodeType"
          },
          "reference_document": {
            "$ref": "#/components/schemas/commonSystemDocumentReference"
          },
          "event_date": {
            "type": "string",
            "format": "date-time",
            "title": "生产/收货日期"
          },
          "quantity": {
            "$ref": "#/components/schemas/commonQuantityValue"
          },
          "children": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/traceabilityTraceabilityNode"
            },
            "title": "子节点"
          }
        },
        "title": "追溯节点"
      },
      "traceabilityTraceabilityTree": {
        "type": "object",
        "properties": {
          "root": {
            "$ref": "#/components/schemas/traceabilityTraceabilityNode"
          },
          "generated_at": {
            "type": "string",
            "format": "date-time",
            "title": "树的生成时间"
          }
        },
        "title": "追溯树"
      }
