{
  "openapi": "3.1.0",
  "info": {
    "title": "Batch Traceability Service API",
    "version": "version not set",
    "description": "批次追溯服务 - 产品追溯、批次查询、供应链可视化",
    "contact": {
      "name": "Supply Chain Team",
      "email": "supplychain@enterprise.com"
    }
