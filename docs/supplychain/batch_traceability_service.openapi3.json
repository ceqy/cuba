  "paths": {
    "/api/v1/supplychain/batch": {
      "post": {
        "summary": "创建批次 (New)",
        "operationId": "BatchTraceabilityService_CreateBatch",
        "responses": {
          "200": {
            "description": "A successful response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/traceabilityBatchResponse"
                }
              }
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/rpcStatus"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/traceabilityCreateBatchRequest"
              }
            }
          },
          "required": true
        },
        "tags": [
          "BatchTraceabilityService"
        ]
      }
    },
