          "JOB_STATUS_UNSPECIFIED",
          "JOB_STATUS_PENDING",
          "JOB_STATUS_RUNNING",
          "JOB_STATUS_COMPLETED",
          "JOB_STATUS_FAILED",
          "JOB_STATUS_CANCELLED",
          "JOB_STATUS_PARTIALLY_COMPLETED"
        ],
        "default": "JOB_STATUS_UNSPECIFIED",
        "title": "异步作业状态"
      },
