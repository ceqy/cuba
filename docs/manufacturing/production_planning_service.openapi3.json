        "type": "string",
        "enum": [
          "MRP_RUN_TYPE_UNSPECIFIED",
          "MRP_RUN_TYPE_NETCH",
          "MRP_RUN_TYPE_NETPL",
          "MRP_RUN_TYPE_NEUPL"
