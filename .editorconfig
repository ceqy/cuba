# EditorConfig - https://editorconfig.org
# CUBA Enterprise Monorepo

root = true

# 默认配置
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Rust 文件
[*.rs]
indent_size = 4
max_line_length = 100

# Proto 文件
[*.proto]
indent_size = 2

# YAML/TOML 配置
[*.{yaml,yml,toml}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile (必须使用 tab)
[Makefile]
indent_style = tab

# JSON
[*.json]
indent_size = 2

# SQL
[*.sql]
indent_size = 2

# Shell scripts
[*.sh]
indent_size = 2
